    {
      "label": "Profile HMC jitStep (GC + loader)",
      "type": "shell",
      "command": "JAXJS_CACHE_LOG=1 NODE_OPTIONS=\"--expose-gc --loader ./tools/jaxjs-loader.mjs\" ITERATIONS=2000 LOG_EVERY=500 npx tsx examples/memory-profile-hmc-jit-step.ts",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Test (vitest)",
      "type": "shell",
      "command": "npm test",
